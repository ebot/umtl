          .column.grid_2 Services
        %a{ :href => 'http://www.umtownship.org/library/youth_main.html' }
          .column.grid_1 Kids!
      #social_media.row
        .column.grid_6
          %form{ :name => 'ccoptin', :action => 'http://visitor.constantcontact.com/d.jsp', :target => '_blank', :method => 'post', :style => 'margin-bottom:3;' }
            %label{ :for => 'ea' }
              Sign up for our newsletter:
            %input#ea{ :type => 'text', :name => 'ea', :value => '' }
            %input#go{ :type => 'submit', :name => 'go', :value => 'go' }
        .column.grid_6
          %table{ :border => '0', :cellspacing => '0', :cellpadding => '0' }
            %tr
              %td
                %img{ :src => 'images/facebook-icon.gif', :height => '23px', :width => '23px', :border => '0' }
                &nbsp;&nbsp;
              %td
                %a{ :href => 'http://www.facebook.com/?ref=home#/pages/King-of-Prussia-PA/Upper-Merion-Township-Library/69347104972?ref=mf' }
