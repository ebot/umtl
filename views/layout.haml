        .row
          .column.grid_8
            %h1
              Upper Merion Township Library
          .column.grid_2
            %table#hours{ :border => '0', :cellspacing => '0', :cellpadding => '0' }
              %tr
                %th{ :colspan => '2' }
                  Library Hours
              %tr
                %td
                  Mon - Thr&nbsp;&nbsp;
                %td
                  9AM to 9PM
              %tr
                %td
                  Friday
                %td
                  9 AM to 5 PM
              %tr
                %td
                  Saturday
                %td
                  10 AM to 5 PM
